# Docker Compose service settings
TCP_PROXY_BUILD_CONTEXT=.
TCP_PROXY_DOCKERFILE=Dockerfile
TCP_PROXY_CONTAINER_NAME=tcp-proxy
TCP_PROXY_RESTART=unless-stopped
GAME_PORT_PUBLISH=25565-25665:25565-25665/tcp
SFTP_PORT_PUBLISH=30500-31000:30500-31000/tcp

# Worker runtime settings
ORCH_BASE_URL=http://localhost:8080
ORCH_TOKEN=dev-token
PROXY_ID=local-dev-proxy
PROXY_REGION=local
POLL_INTERVAL_SECONDS=15
GAME_LISTEN_RANGE=25565-25665
SFTP_LISTEN_RANGE=30500-31000
HAPROXY_CFG=/etc/haproxy/haproxy.cfg
HAPROXY_PIDFILE=/run/haproxy.pid
STATE_DIR=/var/lib/proxy-sync
